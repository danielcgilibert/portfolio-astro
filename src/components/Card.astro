---
import { Image } from '@astrojs/image/components'
import Icon from './Icon.astro'
import Link from './Link.astro'

export interface Props {
	title: string
	img: string
	border: string
	hrefCode: string
	hrefWeb: string
	width?: number
	height?: number
}

const {
	title = 'null',
	border = 't',
	img = null,
	hrefCode = null,
	hrefWeb = null,
	width = 300,
	height = 300
} = Astro.props
---

<div class='relative rounded-md transition-all duration-100'>
	<div
		class='flex justify-around px-2 py-1 absolute bg-[#20171B] bg-opacity-95 bottom-3 left-0 right-0 mx-auto z-10 w-3/4 rounded-lg'
	>
		<Link href={hrefCode}
			><Icon h={6} h={6} name='github' additionalClass={' bg-white p-[1px]  '} />
		</Link>
		<Link href={hrefWeb}><Icon name='web2' h={6} h={6} additionalClass={'bg-white'} /></Link>
	</div>
	<Link href={hrefCode}>
		<Image
			src={import(`../assets/${img}.jpg`)}
			class='rounded-lg p-0.5 w-56 h-64 object-cover'
			alt={title}
			format='webp'
		/>
	</Link>
</div>
