---
import 'normalize.css'
import Nav from '../components/Nav.astro'
export interface Props {
	title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html class='scroll-smooth' lang='es'>
	<head>
		<meta charset='UTF-8' />
		<meta name='viewport' content='width=device-width, initial-scale=1, viewport-fit=cover' />
		<link
			rel='icon'
			type='image/svg+xml'
			href='https://avatars.githubusercontent.com/u/44914786?s=280&v=4'
		/>
		<meta name='description' content='portfolio de daniel carmona gilibert' />
		<meta name='generator' content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class='text-white text-lg px-14 py-8 md:px-5 md:w-10/12 2xl:w-4/12 md:mx-auto pb-24'>
		<header>
			<Nav />
		</header>
		<slot />
	</body>

	<style>
		* {
			box-sizing: border-box;
		}

		body {
			margin: 0;
			padding: 0;
			background: radial-gradient(circle, rgba(34, 17, 26, 1) 10%, rgba(0, 0, 0, 1) 89%) no-repeat
				center center fixed;
			scroll-behavior: smooth;
		}
	</style>
</html>
